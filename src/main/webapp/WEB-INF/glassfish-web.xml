<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="" httpservlet-security-provider="pluggable-auth">
  <!--  <session-config>
	<session-properties>
	  <property name="enableCookies" value="false" />
	</session-properties>
  </session-config> -->
  <parameter-encoding default-charset="UTF-8"/>
  <context-root>/</context-root>
  <security-role-mapping>
    <role-name>admin</role-name>
    <group-name>admins</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>mod</role-name>
    <group-name>admins</group-name>
    <group-name>mods</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>user</role-name>
    <group-name>teachers</group-name>
    <group-name>alumni</group-name>
    <group-name>admins</group-name>
    <group-name>mods</group-name>
    <group-name>students</group-name>
  </security-role-mapping>
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>
</glassfish-web-app>
